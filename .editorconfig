# http://editorconfig.org

root = true

[*]
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
indent_size = 4
max_line_length = 119

[*.js]
indent_size = 2

[*.css]
indent_size = 2

[*.html]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2